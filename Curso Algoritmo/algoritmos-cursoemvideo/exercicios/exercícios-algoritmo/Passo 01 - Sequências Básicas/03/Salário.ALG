algoritmo "Salário"
var
    nome: caractere
    salario: real
inicio
    escreva("Qual seu nome? ")
    leia(nome)
    escreva("Informe seu salário: ")
    leia(salario)
    escreval("Nome do Funcionário: ", nome) 
    escreval("Salário: ",salario)
    escreval("O funcionário ",nome, " tem um salário de R$",salario, " em Junho.")
fimalgoritmo