algoritmo "Dobro"
var
    n, dobro, terca_part: real
inicio
    escreva("Informe um valor: ")
    leia(n)

    dobro <- n * 2
    terca_part <- n / 3

    escreval("O dobro de ", n, " é ",dobro)
    escreva("A terça parte de ", n, " é ",terca_part)
fimalgoritmo

